{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">

            {# Framework Bootstrap #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">


            <title>Détail de la commande</title>
        </head>

        <h3>Commande n° {{ commande.numeroCommande }}<br>
            faite le {{ commande.dateCommande | date("d-m-Y") }}<br> 
            par {{commande.user.pseudo}}
        </h3>

        <body>
            <div class="wrapperLivres">

                {# Afficher les coordonnées du client #}
                <div class="order">
                    <h2>Adresse de Livraison</h2>{{ commande.coordonnees }}
                    
                    <div class="articles">
    
                        {% for commandeLivre in commandeLivres %}
             
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Livre</th>
                                        <th>Quantité</th>
                                        <th>Prix unitaire</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><img src="{{ asset('uploads/images/'~ commandeLivre.livre.couverture) }}" alt="Couverture des Livres de la collection sélectionnée" class="cover"></td>
                                        <td>{{ commandeLivre }}</td>
                                        <td>{{ commandeLivre.Livre.prixUnitaire }} € ttc</td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="2">Total</td>
                                        <td>{{ commandeLivre.sousTotal }} € ttc</td> 
                                    </tr>
                                </tfoot>
                            </table>
                            
                        {% endfor %}
                            
                        <h2>TOTAL A PAYER {{ commande.totalCommande }} € TTC</h2>

                    </div>

                    <nav id="men">
                        <div id="menu">

                            {# {% if payment_stripe isValid %} #}
                            
                                {# Bouton pour créer la facture #}
                                <a href="{{ path ('app_facture_add', {id:commande.id}) }}" class="btn btn-dark">Obtenir la facture</a>
                            
                            {# {% else %} #}

                                {# Créer une condition pour changer le bouton de finalisation en bouton de paiement après avoir remplit le formulaire #}
                                {% if commande.nom|length >0 %}
                                    {# Lien pour accéder à la page de paiement STRIPE #}
                                    <a href="{{ path ('payment_stripe', {numero_commande: commande.numeroCommande}) }}"><img class="lk" src="{{ asset('img/euro-sign-solid.svg') }}" alt="Accéder au paiement" title="Accéder au paiement"></a>     
                                
                                {% else %}
                                    <a href="{{ path ('app_commande_edit_commande', {id: commande.id}) }}"><img class="lk" src="{{ asset('img/pen-to-square-solid.svg') }}" alt="Finaliser la commande" title="Finaliser la commande"></a>
                                {% endif %}
                                
                            {# {% endif %} #}

                            <a href="{{ path ('show_user', {id: app.user.id}) }}"><img class="lk" src="{{ asset('img/backward-step-solid.svg') }}" alt="Retour" title="Retour"></a>
                        </div>
                    </nav>

                </div> 

            </div>

            {# Framework Bootstrap #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

        </body>

    </html>

{% endblock %}
