{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">


            <title>MON PANIER</title>
        </head>

        <body>
            <div class="wrapper">
                <header>

                    {# Lire et afficher toutes les notifications #}

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="flash-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <!-- Cette partie concerne les commandes de chaque utilisateurs -->
                    <h3>MON PANIER</h3>

                    {% if app.user %}
                        <a class="crud" href="{{ path ('new_commande') }}"><img class="icone" src="{{ asset('img/cart-plus-solid.svg') }}" alt="Ajouter une commande" title="Ajouter une commande"></a>
                    {% endif %}

                    {# Ce que les utiliseurs peuvent voir #}
                    {# Créer une condition pour afficher un message quand il n'y a pas de commandes #}
                    
                    {% if user.commande | length >0 %}

                        {% for commande in user.commande %}
                            
                            <div class="liste">
                                    
                                <div class="option">
                                    <a class="crud" href="{{ path ('edit_commande', {id: commande.id}) }}"><img class="icone2" src="{{ asset('img/pen-to-square-solid.svg') }}" alt="Modifier" title="Modifier"></a>

                                    {# Accéder au détail en cliquant sur la date de commande #}
                                    <a class="btnCom" title="Accéder au détail de cette commande" href="{{ path ('show_commande', {id: commande.id}) }}">{{ commande.dateCommande | date("d-m-Y") }}</a>
                                    
                                    <a class="crud" href="{{ path ('delete_commande', {id: commande.id}) }}"><img class="icone2" src="{{ asset('img/trash-solid.svg') }}" alt="Supprimer" title="Supprimer"></a>
                                </div>
                                
                            </div>

                        {% endfor %}

                    {% else %}
                        <p>Aucunes commandes</p>

                        {% if app.user %}
                            <a class="crud" href="{{ path ('new_commande') }}"><img class="icone" src="{{ asset('img/cart-plus-solid.svg') }}" alt="Ajouter une commande" title="Ajouter une commande"></a>
                        {% endif %}

                    {% endif %}
                    
                    <nav id="men">
                        <div id="menu">
                            <a href="{{ path ('app_user', {id: user.id}) }}"><img class="lk" src="{{ asset('img/user-solid.svg') }}" alt="Retour à l'espace personnel" title="Retourner à mon espace"></a>
                        </div>
                    </nav>

                </header>
            </div>
            <!-- <script>src = "script.js"</script> -->
        </body>

    </html>
{% endblock %}
