{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">


            <title>COLLECTIONS</title>
        </head>

        <body>
            <div class="wrapper">
                <header>
                    <!-- Cette page concerne les séries de livres -->
                    <h3>COLLECTIONS</h3>

                    {% if is_granted('ROLE_ADMIN') %}
                        {# Seul l'admin peut ajouter une nouvelle collection #}
                        <a class="crud" href="{{ path ('new_serie') }}">AJOUTER</a>

                        {# BDD L'élément de la collection #}
                        {# Créer une boucle for #}
                        {% for serie in series %}
                            <div class="liste">
                                
                                <h1>{{ serie }}</h1>

                                {# Seul l'admin peut modifier et/ou supprimer une collection #}
                                <div class="option">
                                    <a class="crud" href="{{ path ('edit_serie', {id: serie.id}) }}">MODIFIER</a>
                                    <a class="crud" href="{{ path ('delete_serie', {id: serie.id}) }}">SUPPRIMER</a>
                                </div>
                                
                            </div>
                        {% endfor %}

                    {% endif %}

                    {% for serie in series %}
                        {# Accéder à la liste des livres pour chaque collections en cliquant sur l'intitulé d'une collection #}
                        <a class="btn" title="Accéder à la liste des livres de cette collection" href="">{{ serie }}</a>
                    {% endfor %}

                    <nav id="men">
                        <div id="menu">
                            <a href="{{ path ('app_user') }}"><img class="lk" src="{{ asset('img/house-solid.svg') }}" alt="Retour à l'espace personnel" title="Retourner à mon espace"></a>
                        </div>
                    </nav>

                </header>
            </div>
            <!-- <script>src = "script.js"</script> -->
        </body>

    </html>
{% endblock %}
