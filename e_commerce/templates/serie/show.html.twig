{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">


            <title>Liste des Livres</title>
        </head>
        {# Précise le titre de la collection cible #}
        <h3>Les livres de la collection {{ serie }}</h3>
        <body>
            <div class="wrapperLivres">
        
                {# Créer une condition pour afficher un message quand il y a pas de livres dans une collection #}
                {% if serie.Livre | length >0 %}
                
                    {% for livre in serie.Livre %}
                        
                        <figure>
                            {# Pour afficher les couvertures de chaque livres #}
                            <img src="{{ asset('uploads/images/'~ livre.couverture) }}" alt="Couverture des Livres de la collection sélectionnée" class="couvertures">
                        </figure>
                    
                    {% endfor %}
                {% else %}

                    <p>Aucuns livres dans cette collection</p>
                
                {% endif %}  

                <nav id="men">
                    <div id="menu">
                        <a href="{{ path ('app_serie') }}"><img class="lk" src="{{ asset('img/backward-step-solid.svg') }}" alt="Retour à la liste des collections" title="Retourner à la liste des collections"></a>
                    </div>
                </nav>
            </div>
        </body>

    </html>

{% endblock %}
