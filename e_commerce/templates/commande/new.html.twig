{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">


            <title>AJOUTER UNE COMMANDE</title>
        </head>

        <body>
            <div class="wrapper">
        

                {# Condition pour gérer le titre selon si on créer ou l'on modifie une commande #}
                {% if edit %}
                    <h3>Modifier une commande</h3>
                {% else %}
                    <h3>Ajouter une nouvelle commande</h3> 
                {% endif %}
        
                <h2>Renseignez vos coordonnées dans le formulaire ci-dessous pour la facturation et la livraison</h2><br>
            
                <div class="formAddCommande">

                    {# Affiche le formulaire #}
                    {{form(formAddCommande)}}

                </div>

                <nav id="men">
                    <div id="menu">
                        <a href="{{ path ('app_commande') }}"><img class="lk" src="{{ asset('img/backward-step-solid.svg') }}" alt="Retour à la liste des commandes" title="Retourner à la liste des commandes"></a>
                    </div>
                </nav>
            </div>
        </body>

    </html>

{% endblock %}
