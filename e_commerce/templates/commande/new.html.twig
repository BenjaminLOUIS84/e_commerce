        <body>
            <div class="wrapper">
        

                {# Condition pour afficher des instructions pour finaliser la commande #}
                {% if edit %}
                    <h1>Finaliser la commande</h1>
                    <h3>Renseignez vos coordonnées dans le formulaire ci-dessous pour la livraison</h3><br>
                {% else %}
                    
                {% endif %}
                
                <div class="formAddCommande">

                    {# Affiche le formulaire #}
                    {{ form_start(form) }}

                        {{ form_row(form.nom) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.adresse) }}
                        {{ form_row(form.cp) }}
                        {{ form_row(form.ville) }}
                        
                    {{ form_end(form) }}


                </div>

                <nav id="men">
                    <div id="menu">
                        <a href="{{ path ('show_user', {id: app.user.id}) }}"><img class="lk" src="{{ asset('img/backward-step-solid.svg') }}" alt="Retour" title="Retour"></a>
                    </div>
                </nav>
            </div>

