{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">


            <title>MON PANIER</title>
        </head>

        <body>
            <div class="wrapper">
                <header>
                    <!-- Cette page concerne les commandes -->
                    <h3>MON PANIER</h3>

                    {# Lire et afficher toutes les notifications #}

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="flash-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {# {% for livre in commande.Livre %} #}
                    {# {% for livre in livres %} #}
                        
                    <figure>
                        {# Pour afficher les couvertures de chaque livres #}
                        {# <img src="{{ asset('uploads/images/'~ livre.couverture) }}" alt="Couverture des Livres de la collection sélectionnée" class="couvertures"> #}
                    </figure>
                
                    {# {% endfor %} #}

                    {# Créer une condition pour afficher un message quand il n'y a pas de commandes #}
                    {% if commandes | length >0 %}

                        {% for commande in commandes %}
                            <div class="liste">
                                    
                                <div class="option">
                                    <a class="crud" href="{{ path ('edit_commande', {id: commande.id}) }}"><img class="icone" src="{{ asset('img/pen-to-square-solid.svg') }}" alt="Modifier" title="Modifier"></a>
                                    <h1>{{ commande.dateCommande | date("d-m-Y") }}</h1>
                                    <a class="crud" href="{{ path ('delete_commande', {id: commande.id}) }}"><img class="icone" src="{{ asset('img/trash-solid.svg') }}" alt="Supprimer" title="Supprimer"></a>
                                </div>
                                
                            </div>
                        {% endfor %}

                    {% else %}
                        <p>Aucunes commandes</p>
                        <a class="crud" href="{{ path ('new_commande') }}"><img class="icone" src="{{ asset('img/cart-plus-solid.svg') }}" alt="Ajouter une commande" title="Ajouter une commande"></a>
                    {% endif %}

                    <nav id="men">
                        <div id="menu">
                            <a href="{{ path ('app_user') }}"><img class="lk" src="{{ asset('img/user-solid.svg') }}" alt="Retour à l'espace personnel" title="Retourner à mon espace"></a>
                        </div>
                    </nav>

                </header>
            </div>
            <!-- <script>src = "script.js"</script> -->
        </body>

    </html>
{% endblock %}
