{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">

            {# Framework Bootstrap #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

            <title>FACTURE</title>
        </head>

        <body>
            <div class="wrapperLivres">
                <header>

                    {% for facture in factures %}
                        <!-- Cette page concerne les factures -->
                        <h2>Facture n° {{ facture }}</h2> 
                    {% endfor %}

                    <h3>
                        Commande n° {{ commande.numeroCommande }}<br>
                        faite le {{ commande.dateCommande | date("d-m-Y") }}<br>   
                    </h3>
                    <p>Livraison : {{ commande.coordonnees }}</p>

                    <div class="articles">
    
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Livre</th>
                                    <th>Format</th>
                                    <th>Quantité</th>
                                    <th>Prix unitaire</th>
                                </tr>
                            </thead>

                            {% for commandeLivre in commandeLivres %}

                                <tbody>
                                    <tr>
                                        <td>{{ commandeLivre.livre.titre }}</td>
                                        <td>{{ commandeLivre.livre.format }}</td>
                                        <td>{{ commandeLivre }}</td>
                                        <td>{{ commandeLivre.Livre.prixUnitaire }} € ttc</td>
                                    </tr>
                                </tbody>

                            {% endfor %}

                        </table>
                        
                        <h2>TOTAL {{ commande.totalCommande }} € TTC</h2>
                        <h3>REGLEE</h3>

                    </div>

                    <nav id="men">
                        <div id="menu">

                            {# Pour télécharger la Facture #}
                            <a href="{{ path ('app_facture_facture_pdf', {id: commande.id}) }}"><img class="lk" src="{{ asset('img/download-solid.svg') }}" alt="Télécharger" title="Télécharger"></a>
                            
                            {# Pour supprimer la commande et la facture après l'avoir téléchargé #}
                            {# <a href="{{ path ('app_commande_delete_commande', {id: commande.id}) }}"><img class="lk" src="{{ asset('img/backward-step-solid.svg') }}" alt="Retour" title="Retour"></a> #}
                            
                            {# Revenir en arrière #}
                            <a href="{{ path ('show_user', {id: app.user.id}) }}"><img class="lk" src="{{ asset('img/backward-step-solid.svg') }}" alt="Retour" title="Retour"></a>
                        
                        </div>
                    </nav>

                </header>
            </div>

            {# Framework Bootstrap #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

        </body>

    </html>
{% endblock %}
