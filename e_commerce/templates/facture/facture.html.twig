{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ absolute_url(asset('/css/file.css')) }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">

            {# Framework Bootstrap #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

            <title>FACTURE</title>
        </head>

        <body>
            <div class="wrapperFactures">
                <header>
                    <!-- Cette page concerne les factures -->

                    {% for facture in factures %}
                        <h3>Facture n° {{ facture }}</h3> 
                    {% endfor %}

                    <h2>Commande n° {{ commande.numeroCommande }} faite le {{ commande.dateCommande | date("d-m-Y") }}<br></h2>
                    <h4>Livraison : {{ commande.coordonnees }}</h4>

                    <div class="description">
    
                        {% for commandeLivre in commandeLivres %}
             
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Livre</th>
                                        <th>Format</th>
                                        <th>Quantité</th>
                                        <th>Prix unitaire</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ commandeLivre.livre.titre }}</td>
                                        <td>{{ commandeLivre.livre.format }}</td>
                                        <td>{{ commandeLivre }}</td>
                                        <td>{{ commandeLivre.Livre.prixUnitaire }} € ttc</td>
                                    </tr>
                                </tbody>
                            </table>
                            
                        {% endfor %} 
                        
                    </div>

                </header>

            </div>

            <div class="total">
                <h2>TOTAL {{ commande.totalCommande }} € TTC MONTANT SOLDEE</h2>
            </div>  
            
            <div class="entreprise">
                <img src="{{ absolute_url(asset('/img/logo.jpg')) }}" class="logoFou"/>

                <div class="ent">
                    <h3>MT&CO<br></h3>
                    <h4>98 rue Bobillot 75013 PARIS 13 FRANCE</h4>
                    <h4>Email : etrefouetsage@gmail.com Auteur/Ecrivain : Daniel Aaron</h4>
                </div>
            </div>

            {# Framework Bootstrap #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

        </body>

    </html>
{% endblock %}
