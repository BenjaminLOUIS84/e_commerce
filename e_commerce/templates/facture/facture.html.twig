{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">

            {# Framework Bootstrap #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

            <title>FACTURE</title>
        </head>

        <body>
            <div class="wrapperLivres">
                <header>
                    <!-- Cette page concerne les factures -->
                    <h2>MA FACTURE</h2>

                    <h3>
                        Commande n° {{ commande.numeroCommande }}<br>
                        faite le {{ commande.dateCommande | date("d-m-Y") }}<br>   
                    </h3>
                    <p> {{ commande.coordonnees }}</p>

                    <div class="articles">
    
                        {% for commandeLivre in commandeLivres %}
             
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Livre</th>
                                        <th>Format</th>
                                        <th>Quantité</th>
                                        <th>Prix unitaire</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{ commandeLivre.livre.titre }}</td>
                                        <td>{{ commandeLivre.livre.format }}</td>
                                        <td>{{ commandeLivre }}</td>
                                        <td>{{ commandeLivre.Livre.prixUnitaire }} € ttc</td>
                                    </tr>
                                </tbody>
                            </table>
                            
                        {% endfor %}
                            
                        <h2>TOTAL {{ commande.totalCommande }} € TTC</h2>
                        <h1>REGLEE</h1>

                    </div>

                </header>
            </div>

            {# Framework Bootstrap #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

        </body>

    </html>
{% endblock %}
