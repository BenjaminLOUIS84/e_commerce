{# {% extends 'base.html.twig' %} #}

{% block title %}{% endblock %}

{% block body %}
    <!DOCTYPE html>
    <html lang="fr">

        <head>
            <meta charset="utf-8">

            <link rel="stylesheet" href="{{ asset('css/file.css') }}">
            
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&display=swap" rel="stylesheet">


            <title>FORMATS</title>
        </head>

        <body>
            <div class="wrapper">
                <header>
                    <!-- Cette page concerne le format des livres Papier ou Numérique -->
                    <h3>FORMATS</h3>

                    {% if is_granted('ROLE_ADMIN') %}
                        {# Seul l'admin peut ajouter un nouveau format #}
                        <a class="crud" href="">AJOUTER</a>
                    {% endif %}

                    {# BDD L'élément de la format #}
                    {# Créer une boucle for #}
                    {% for format in formats %}
                        <div class="liste">
                            {# Accéder à la liste des livres pour chaque formats en cliquant sur l'intitulé d'une format #}
                            <a class="btn" href="">{{ format }}</a>

                            {# Seul l'admin peut modifier et/ou supprimer une format #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="option">
                                    <a class="crud" href="">MODIFIER</a>
                                    <a class="crud" href="">SUPPRIMER</a>
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}

                    

                    <nav id="men">
                        <div id="menu">
                            <a href="{{ path ('app_user') }}"><img class="lk" src="{{ asset('img/house-solid.svg') }}" alt="Retour à l'espace personnel" title="Retourner à mon espace"></a>
                        </div>
                    </nav>

                </header>
            </div>
            <!-- <script>src = "script.js"</script> -->
        </body>

    </html>
{% endblock %}
